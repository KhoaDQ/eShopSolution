@model eShopSolution.ViewModels.Catalog.Products.CategoryAssignRequest
@{
    ViewData["Title"] = "CategoryAssign";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h1 class="mt-4">Assign category</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/">Master page</a></li>
        <li class="breadcrumb-item active">Assign category</li>
    </ol>
    <div class="card mb-4">
        <div class="card-header">
            <a class="btn btn-success" asp-action="Index" asp-controller="Product">Back to list</a>
        </div>

        <div class="card-body">
            <div class="col-md-4">
                <form asp-action="CategoryAssign">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    @for (var i = 0; i < Model.Categories.Count; i++)
                    {
                        <div class="form-group">
                            <label>
                                @Model.Categories[i].Name
                                <input type="checkbox" asp-for="Categories[i].Selected" />
                                <input type="hidden" asp-for="Categories[i].Id" />
                                <input type="hidden" asp-for="Categories[i].Name" />
                            </label>
                        </div>
                    }
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>